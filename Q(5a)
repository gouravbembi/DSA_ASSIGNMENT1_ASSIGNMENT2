#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter size of matrix: ";
    cin >> n;

    int A[10][10] = {0};  

    
    cout << "Enter " << n << " diagonal elements:\n";
    for(int i=0; i<n; i++) {
        cin >> A[i][i];  
    }

   
    cout << "\nDiagonal Matrix:\n";
    for(int i=0; i<n; i++) {
        for(int j=0; j<n; j++) {
            cout << A[i][j] << " ";
        }
        cout << endl;
    }

    return 0;
}
